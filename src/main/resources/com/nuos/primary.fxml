<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.nuos.PrimaryController">
   <children>
      <Label text="LR8" />
      <TextArea fx:id="result" prefRowCount="30" wrapText="true"/>
      <HBox spacing="7.0">
         <TextField fx:id="facultyField" promptText="Факультет"/>
         <Button text="Студенти факультету" onAction="#showByFaculty"/>
      </HBox>
      <HBox spacing="7.0">
         <TextField fx:id="yearField" promptText="Рік"/>
         <Button text="Народжені після року" onAction="#showBornAfterYear"/>
      </HBox>
      <HBox spacing="7.0">
         <TextField fx:id="groupField" promptText="Група"/>
         <Button text="Студенти групи" onAction="#showByGroup"/>
      </HBox>
      <HBox spacing="7.0">
         <Button text="Сортувати за датою народження" onAction="#sortByBirthDesc"/>
      </HBox>
      <HBox spacing="7.0">
         <TextField fx:id="studentNameField" promptText="ПІБ"/>
         <Button text="Перевірити студента" onAction="#checkStudent"/>
      </HBox>
      <HBox spacing="7.0">
         <Button text="Групи лише фіз. особи" onAction="#showGroupsOnlyPhysical"/>
      </HBox>
      <HBox spacing="7.0">
         <Button text="Map: факультет (key) і його студенти (value)" onAction="#mapFacultyToStudents"/>
         <Button text="Map: рік (key) і кількість (value) студентів" onAction="#mapYearToCount"/>
      </HBox>
      <Label text="Made by MV 4157st" />
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
